    <div class="container mt-3">
      <form action="/board/edit?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">임시:작성자</label>
          <input type="text" class="form-control" id="title" name="author" value="<%=board.author%>">
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">제목</label>
          <input type="text" class="form-control" id="title" name="title" value="<%=board.title%>">
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">내용</label>
          <div class="form-floating mb-2">
            <textarea name="contents" class="form-control" placeholder="Leave a comment here" name="content" id="content" ><%=board.contents%></textarea>
