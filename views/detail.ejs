<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
  <title>Hello, world!</title>
  <style>
    .btn {
      float: right;
      margin-right: 5px;
    }

    .board-title {
      float: left;
      border-bottom: none;
      width: 200px;
    }

    .board-author {}

    .board-date {
      float: right;
      width: 200px;
    }
  </style>
</head>

<body>
  <%- include('nav.html') %>
    <div class="container mt-4">
      <h4 class="text-center">상세페이지</h4>

      <table class="table table-striped">
        <thead>
          <tr>
            <td class="board-title">
              제목 : <%=board.title%>
            </td>
          </tr>
          <tr>
            <td class="board-author">
              작성자 : <%=board.author%>
            </td>
            <td class="board-date">
              <%=board.board_date%>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="3">
              <%=board.contents%>
            </td>
          </tr>
          <tr>
            <td colspan="3" class="btn-section">
              <button class="btn btn-danger delete" data-id="<%= board._id %>">삭제</button>
              <button class="btn btn-success edit" data-id="<%= board._id %>">수정</button>
            </td>
          </tr>
        </tbody>
        <tfoot>

          <form action="/comment/write" method="POST">
            <td colspan="3">
              <div class="form-floating mb-2">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Comments</label>
              </div>
              <button type="submit" class="btn btn-success edit">작성</button>
            </td>
          </form>
          <% if(board.comments !=null){ %>
            <% for(let i=0; i<board.comments.length; i++){ %>
              <tr>
                <td>작성자 : <%=board.comments[i].author%>
                </td>
                <td>
                  <%=board.comments[i].contents %>
                </td>
                <td>
                  <%=board.comments[i].comment_date %>
                </td>
              </tr>
              <% }} %>
        </tfoot>
      </table>
    </div>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>

    <script>
      $('.delete').click(function (e) {
        let 글번호 = e.target.dataset.id;
        let is = confirm('삭제 하시겠습니까?');

        if (is) {
          $.ajax({
            method: 'DELETE',
            url: '/board/delete',
            data: { id: 글번호 }
          }).success(function (결과) {
            location.href="/"
          }).error(function (a, b, c) {
            location.href="/"
          })
        }
      })

      $('.edit').click(function (e) {
        let 글번호 = e.target.dataset.id;
        $.ajax({
          method: 'get',
          url: '/board/edit/' + 글번호
        }).done(function (결과) {
          location.href = '/board/edit/' + 글번호;
        }).fail(function (a, b, c) {
        });
      })
    </script>
</body>

</html>